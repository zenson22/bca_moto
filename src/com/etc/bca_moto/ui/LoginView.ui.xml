            </XdevButton>
        </XdevAbsoluteLayout>
        <XdevAbsoluteLayout x:name="absoluteLayoutFooter">
            <x:constraints gridx="1" gridy="3" top="371px" left="0px" weighty="0.0" weightx="0.1" width="600px" alignment="BOTTOM_CENTER" height="100px" />
